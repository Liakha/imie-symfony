<table class="table table-bordered">
{% for item in links %}
    <tr>
        <td>
            <a href="{{ item.url }}">{{ item.name }}</a>
            <span class="badge" style="background-color: {{ item.category.color }}">{{ item.category.name }}</span>
        </td>
        <td>
        <a href="{{ path('link_edit', {'id': item.id}) }}" class="btn btn-xs">
            <i class="fa fa-pencil"></i>
        </a>
        </td>
        <td>
            le {{ item.createdAt|date('d/m/Y') }}
        </td>
    </tr>
{% endfor %}
</table>

